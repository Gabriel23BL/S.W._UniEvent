<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Gestión de eventos - UniEvent</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../css/sisten.css">
  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            uni: 'rgb(255, 251, 222)',
          }
        }
      }
    }
  </script>

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body class="bg-uni min-h-screen text-gray-800">

                <!-- Sidebar -->
        <div class="col-lg-2 col-md-3 px-0">
          <div class="sidebar d-flex flex-column">
            <div class="sidebar-logo">
              <div class="flex items-center gap-0 mb-1">
                <img src="../img/logo.png" alt="Logo UniEvent" class="w-12 h-12">
                <h3 class="text-white text-xl font-bold">UniEvent</h3>
              </div>
            </div>
            
            <ul class="nav flex-column mt-3">
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-home"></i> Inicio</a></li>
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-calendar-alt"></i> Eventos</a></li>
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-chart-bar"></i> Estadísticas</a></li>
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-user"></i>Mi perfil</a></li>
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-star"></i> Mis eventos</a></li>
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-certificate"></i>Mis certificados</a></li>
            </ul>
            <div class="sidebar-footer mt-auto">
              <a href="/" class="btn btn-outline-light btn-sm w-100"><i class="fas fa-sign-out-alt"></i> Cerrar sesión</a>
            </div>
          </div>
        </div>

  <!-- Mobile navbar -->
  <div class="lg:hidden bg-gray-800 text-white px-4 py-3 flex justify-between items-center">
    <h3 class="text-xl font-bold">UniEvent</h3>
    <button id="menuToggle" class="text-white text-2xl"><i class="fas fa-bars"></i></button>
  </div>
  <div id="mobileMenu" class="hidden lg:hidden bg-gray-800 text-white p-4">
    <ul class="space-y-2">
      <!-- mismo contenido del sidebar -->
    </ul>
  </div>

  <!-- Main content -->
  <main class="lg:ml-64 p-4">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold">Gestión de eventos</h2>
      <div class="flex items-center gap-2">
        <span class="bg-red-600 text-white px-3 py-1 rounded text-sm">Administrador</span>
        <span class="text-gray-800 font-semibold">Analis</span>
      </div>
    </div>

    <!-- Formulario de creación -->
    <div class="bg-white p-6 rounded shadow mb-8">
      <h3 class="text-lg font-semibold mb-4">Crear nuevo evento</h3>
      <form class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block mb-1 font-medium">Título del evento</label>
          <input type="text" class="w-full p-2 border rounded" placeholder="Ej: Curso de JavaScript">
        </div>
        <div>
          <label class="block mb-1 font-medium">Nombre del docente</label>
          <input type="text" class="w-full p-2 border rounded" placeholder="Ej: Juan Bolivar">
        </div>
        <div>
          <label class="block mb-1 font-medium">Precio de inscripción</label>
          <input type="number" class="w-full p-2 border rounded" placeholder="Ej: 25">
        </div>
        <div>
          <label class="block mb-1 font-medium">Imagen del evento</label>
          <input type="file" class="w-full p-2 border rounded">
        </div>
        <div class="md:col-span-2">
          <label class="block mb-1 font-medium">Descripción</label>
          <textarea class="w-full p-2 border rounded" rows="4" placeholder="Breve descripción del evento..."></textarea>
        </div>
        <div class="md:col-span-2 flex justify-end">
          <button class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">Guardar evento</button>
        </div>
      </form>
    </div>

    <!-- Tabla de eventos -->
    <div class="bg-white p-6 rounded shadow">
      <h3 class="text-lg font-semibold mb-4">Eventos creados</h3>
      <div class="overflow-x-auto">
        <table class="min-w-full text-sm">
          <thead class="bg-gray-100">
            <tr>
              <th class="text-left px-4 py-2">Título</th>
              <th class="text-left px-4 py-2">Docente</th>
              <th class="text-left px-4 py-2">Precio</th>
              <th class="text-left px-4 py-2">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-t">
              <td class="px-4 py-2">Desarrollo Full-Stack 2025</td>
              <td class="px-4 py-2">Analis Brito</td>
              <td class="px-4 py-2">$25</td>
              <td class="px-4 py-2">
                <div class="flex gap-2">
                  <button class="text-blue-600 hover:underline"><i class="fas fa-edit"></i> Editar</button>
                  <button class="text-red-600 hover:underline"><i class="fas fa-trash-alt"></i> Eliminar</button>
                </div>
              </td>
            </tr>
            <!-- Más eventos aquí -->
          </tbody>
        </table>
      </div>
    </div>
  </main>

  <!-- Script -->
  <script>
    const menuToggle = document.getElementById('menuToggle');
    const mobileMenu = document.getElementById('mobileMenu');
    menuToggle.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  </script>
</body>
</html>
