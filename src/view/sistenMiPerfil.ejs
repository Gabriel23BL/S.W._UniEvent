<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Mi perfil - UniEvent</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../css/sisten.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>
  <section class="app-section" id="mainSection">
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-2 col-md-3 px-0">
          <div class="sidebar d-flex flex-column">
            <div class="sidebar-logo">
              <h3 class="text-white mb-0">UniEvent</h3>
            </div>
            <ul class="nav flex-column mt-1">
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-home"></i> Inicio</a></li>
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-calendar-alt"></i> Eventos</a></li>
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-calendar-week"></i> Calendario</a></li>
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-star"></i> Mis eventos</a></li>
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-chart-bar"></i> Estadísticas</a></li>
              <li class="nav-item"><a class="nav-link active" href="#"><i class="fas fa-user"></i> Mi perfil</a></li>
              <li class="nav-item"><a class="nav-link active" href="#"><i class="fas fa-certificate"></i> Mis certificados</a></li>
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-cog"></i> Configuración</a></li>
            </ul>
            <div class="sidebar-footer mt-auto">
              <a href="#" class="btn btn-outline-light btn-sm w-100"><i class="fas fa-sign-out-alt"></i> Cerrar sesión</a>
            </div>
          </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-10 col-md-9 p-0">
          <!-- Encabezado perfil -->
          <div class="profile-header">
            <div class="container">
              <div class="row align-items-center">
                <div class="col-lg-2 col-md-3 text-center mb-4 mb-md-0">
                  <div class="avatar-upload">
                    <div class="avatar-edit">
                      <input type="file" id="imageUpload" accept="image/*" />
                      <label for="imageUpload"><i class="fas fa-camera"></i></label>
                    </div>
                    <div class="avatar-preview">
                      <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" class="profile-img" alt="Foto de perfil">
                    </div>
                  </div>
                </div>
                <div class="col-lg-10 col-md-9">
                  <h2>Gabriel</h2>
                  <p class="mb-0">gabriel@ejemplo.com</p>
                  <span class="badge bg-dark">V-28051690</span>
                  <span class="badge bg-primary">Estudiante</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Contenido perfil -->
          <div class="container">
            <div class="row">
              <!-- Información personal -->
              <div class="col-lg-8">
                <div class="card mb-4">
                  <div class="card-header bg-white">
                    <h5 class="mb-0">Información personal</h5>
                  </div>
                  <div class="card-body">
                    <form>
                      <div class="mb-3">
                        <label for="fullName" class="form-label">Nombre completo</label>
                        <input type="text" class="form-control" id="fullName" value="Gabriel">
                      </div>
                      <div class="mb-3">
                        <label for="email" class="form-label">Correo electrónico</label>
                        <input type="email" class="form-control" id="email" value="gabriel@ejemplo.com" disabled>
                      </div>
                      <div class="mb-3">
                        <label for="phone" class="form-label">Teléfono</label>
                        <input type="tel" class="form-control" id="phone">
                      </div>
                      <div class="mb-3">
                        <label for="faculty" class="form-label">Facultad / Departamento</label>
                        <select class="form-select" id="faculty">
                          <option value="">Seleccionar</option>
                          <option value="cs">Ciencias</option>
                          <option value="eng">Ingeniería</option>
                          <option value="art">Artes y Humanidades</option>
                          <option value="soc">Ciencias Sociales</option>
                          <option value="med">Medicina</option>
                          <option value="law">Derecho</option>
                        </select>
                      </div>
                      <button type="submit" class="btn btn-primary">Guardar cambios</button>
                    </form>
                  </div>
                </div>
              </div>

              <!-- Estadísticas y contraseña -->
              <div class="col-lg-4">
                <div class="card mb-4">
                  <div class="card-header bg-white">
                    <h5 class="mb-0">Estadísticas de participación</h5>
                  </div>
                  <div class="card-body">
                    <div class="d-flex justify-content-between mb-3"><span>Eventos inscritos</span><strong>12</strong></div>
                    <div class="d-flex justify-content-between mb-3"><span>Eventos asistidos</span><strong>10</strong></div>
                    <div class="d-flex justify-content-between mb-3"><span>Certificados obtenidos</span><strong>8</strong></div>
                    <div class="d-flex justify-content-between mb-3"><span>Eventos organizados</span><strong>2</strong></div>
                  </div>
                </div>

                <div class="card">
                  <div class="card-header bg-white">
                    <h5 class="mb-0">Cambiar contraseña</h5>
                  </div>
                  <div class="card-body">
                    <form>
                      <div class="mb-3">
                        <label for="currentPassword" class="form-label">Contraseña actual</label>
                        <input type="password" class="form-control" id="currentPassword" required>
                      </div>
                      <div class="mb-3">
                        <label for="newPassword" class="form-label">Nueva contraseña</label>
                        <input type="password" class="form-control" id="newPassword" required>
                      </div>
                      <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirmar contraseña</label>
                        <input type="password" class="form-control" id="confirmPassword" required>
                      </div>
                      <button type="submit" class="btn btn-primary">Actualizar contraseña</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div> <!-- Fin container -->
        </div>
      </div>
    </div>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
