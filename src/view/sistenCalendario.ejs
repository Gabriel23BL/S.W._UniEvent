<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Calendario - UniEvent</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../css/sisten.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>
  <section class="app-section" id="mainSection">
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-2 col-md-3 px-0">
          <div class="sidebar d-flex flex-column">
            <div class="sidebar-logo">
              <h3 class="text-white mb-0">UniEvent</h3>
            </div>
            <ul class="nav flex-column mt-3">
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-home"></i> Inicio</a></li>
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-calendar-alt"></i> Eventos</a></li>
              <li class="nav-item"><a class="nav-link active" href="#"><i class="fas fa-calendar-week"></i> Calendario</a></li>
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-star"></i> Mis eventos</a></li>
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-chart-bar"></i> Estadísticas</a></li>
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-user"></i> Mi perfil</a></li>
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-cog"></i> Configuración</a></li>
            </ul>
            <div class="sidebar-footer mt-auto">
              <a href="#" class="btn btn-outline-light btn-sm w-100"><i class="fas fa-sign-out-alt"></i> Cerrar sesión</a>
            </div>
          </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-10 col-md-9 p-4">
          <div class="section-content" id="calendarSection">
            <!-- Encabezado -->
            <div class="d-flex justify-content-between align-items-center mb-4">
              <h2>Calendario académico</h2>
              <div>
                <span class="badge bg-primary">Estudiante</span>
                <a href="#" class="ms-2">Gabriel</a>
              </div>
            </div>

            <!-- Controles de calendario -->
            <div class="card mb-4">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-3 mb-3 mb-md-0">
                    <select class="form-select" id="calendarView">
                      <option value="month">Vista mensual</option>
                      <option value="week">Vista semanal</option>
                      <option value="day">Vista diaria</option>
                    </select>
                  </div>
                  <div class="col-md-6 d-flex justify-content-center align-items-center mb-3 mb-md-0">
                    <button class="btn btn-outline-secondary me-2" id="prevBtn"><i class="fas fa-chevron-left"></i></button>
                    <h5 class="mb-0" id="currentPeriod">Junio 2025</h5>
                    <button class="btn btn-outline-secondary ms-2" id="nextBtn"><i class="fas fa-chevron-right"></i></button>
                  </div>
                  <div class="col-md-3 d-flex justify-content-md-end">
                    <button class="btn btn-outline-primary" id="todayBtn">Hoy</button>
                  </div>
                </div>
              </div>
            </div>

            <!-- Calendario -->
            <div class="card">
              <div class="card-body">
                <div id="calendar">
                  <!-- Aquí se renderiza el calendario dinámico -->
                  <p>[Calendario interactivo aquí]</p>
                </div>
              </div>
            </div>
          </div> <!-- Fin calendarSection -->
        </div>
      </div>
    </div>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
