<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>UniEvent-Registro</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/formularios.css">
  <script src="/js/registroUsuario.js" defer></script>
</head>
<body>
    <section class="app-section register-section">
    <div class="register-container d-flex align-items-center">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-8">
            <div class="register-box">
              <div class="text-center mb-4">
                <h1 class="h3 mb-3 fw-bold">UniEvent</h1>
                <p class="text-muted">Registro de usuario</p>
              </div>

              <!-- Pasos del registro -->
              <div class="steps-container">
                <div class="step-line"></div>
                <div class="step-item active" id="step1Item">
                  <div class="step-circle">1</div>
                  <p>Datos</p>
                </div>
                <div class="step-item" id="step2Item">
                  <div class="step-circle">2</div>
                  <p>Perfil</p>
                </div>
                <div class="step-item" id="step3Item">
                  <div class="step-circle">3</div>
                  <p>Confirmar</p>
                </div>
              </div>

              <form id="registerForm">
                <!-- Paso 1 -->
                <div id="step1" class="register-step">
                  <div class="mb-3">
                    <label for="registerEmail" class="form-label">Correo electrónico</label>
                    <input type="email" class="form-control" id="registerEmail" required>
                  </div>
                  <div class="mb-3">
                    <label for="registerPassword" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="registerPassword" required>
                  </div>
                  <div class="mb-3">
                    <label for="registerConfirmPassword" class="form-label">Confirmar contraseña</label>
                    <input type="password" class="form-control" id="registerConfirmPassword" required>
                  </div>
                  <div class="d-grid gap-2">
                    <button type="button" class="btn btn-primary" id="step1Next">Siguiente</button>
                  </div>
                </div>

                <!-- Paso 2 -->
                <div id="step2" class="register-step" style="display:none">
                  <div class="mb-3">
                    <label for="registerName" class="form-label">Nombre completo</label>
                    <input type="text" class="form-control" id="registerName" required>
                  </div>
                  <div class="mb-3">
                    <label for="registerRole" class="form-label">Rol</label>
                    <select class="form-select" id="registerRole" required>
                      <option value="" selected disabled>Seleccione un rol</option>
                      <option value="student">Estudiante</option>
                      <option value="teacher">Docente</option>
                      <option value="staff">Personal administrativo</option>
                      <option value="organizer">Organizador de eventos</option>
                    </select>
                  </div>
                  <div class="d-flex justify-content-between">
                    <button type="button" class="btn btn-secondary" id="step2Prev">Atrás</button>
                    <button type="button" class="btn btn-primary" id="step2Next">Siguiente</button>
                  </div>
                </div>

                <!-- Paso 3 -->
                <div id="step3" class="register-step" style="display:none">
                  <div class="alert alert-info">
                    <p class="mb-0">Por favor revisa tus datos antes de finalizar el registro:</p>
                  </div>
                  <div class="mb-3">
                    <p><strong>Correo:</strong> <span id="summaryEmail"></span></p>
                    <p><strong>Nombre:</strong> <span id="summaryName"></span></p>
                    <p><strong>Rol:</strong> <span id="summaryRole"></span></p>
                  </div>
                  <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="termsCheck" required>
                    <label class="form-check-label" for="termsCheck">Acepto los términos y condiciones</label>
                  </div>
                  <div class="d-flex justify-content-between">
                    <button type="button" class="btn btn-secondary" id="step3Prev">Atrás</button>
                    <button type="submit" class="btn btn-success">Completar registro</button>
                  </div>
                </div>
              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
