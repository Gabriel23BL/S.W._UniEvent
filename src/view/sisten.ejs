          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="eventForm">
            <div class="mb-3">
              <label for="eventTitle" class="form-label">Título del evento</label>
              <input type="text" class="form-control" id="eventTitle" required>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="eventDate" class="form-label">Fecha</label>
                <input type="date" class="form-control" id="eventDate" required>
              </div>
              <div class="col-md-3">
                <label for="eventStartTime" class="form-label">Hora inicio</label>
                <input type="time" class="form-control" id="eventStartTime" required>
              </div>
              <div class="col-md-3">
                <label for="eventEndTime" class="form-label">Hora fin</label>
                <input type="time" class="form-control" id="eventEndTime" required>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="eventCategory" class="form-label">Categoría</label>
                <select class="form-select" id="eventCategory" required>
                  <option value="" selected disabled>Seleccionar categoría</option>
                  <option value="tech">Tecnología</option>
                  <option value="art">Arte y Cultura</option>
                  <option value="science">Ciencia</option>
                  <option value="business">Negocios</option>
                  <option value="health">Salud</option>
                  <option value="education">Educación</option>
                </select>
              </div>
              <div class="col-md-6">
                <label for="eventLocation" class="form-label">Ubicación</label>
                <input type="text" class="form-control" id="eventLocation" required>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="eventCapacity" class="form-label">Capacidad (participantes)</label>
                <input type="number" class="form-control" id="eventCapacity" min="1" required>
              </div>
              <div class="col-md-6">
                <label for="eventImage" class="form-label">Imagen del evento</label>
                <input type="file" class="form-control" id="eventImage" accept="image/*">
              </div>
            </div>
            <div class="mb-3">
              <label for="eventDescription" class="form-label">Descripción</label>
              <textarea class="form-control" id="eventDescription" rows="5" required></textarea>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="eventCertificate">
              <label class="form-check-label" for="eventCertificate">
                Otorgar certificado de asistencia
              </label>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>  
          <button type="button" class="btn btn-primary" id="saveEventBtn">Guardar evento</button>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Event Details Modal -->
  <div class="modal fade" id="eventDetailsModal" tabindex="-1" aria-labelledby="eventDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="eventDetailsModalLabel">Detalles del evento</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="text-center mb-4">
            <img src="https://cdn.pixabay.com/photo/2016/11/23/14/29/coding-1853305_1280.jpg" id="detailsEventImage" class="img-fluid rounded" alt="Evento" style="max-height: 300px;">
          </div>
          <h3 id="detailsEventTitle">Título del evento</h3>
          <div class="d-flex align-items-center mb-3">
            <span class="badge bg-primary me-2" id="detailsEventCategory">Categoría</span>
            <span class="text-muted"><i class="far fa-calendar-alt me-1"></i> <span id="detailsEventDate">Fecha</span></span>
          </div>
          <div class="row mb-4">
            <div class="col-md-6">
              <p><i class="far fa-clock me-1"></i> <span id="detailsEventTime">Hora</span></p>
            </div>
            <div class="col-md-6">
              <p><i class="fas fa-map-marker-alt me-1"></i> <span id="detailsEventLocation">Ubicación</span></p>
            </div>
          </div>
          <div class="mb-4">
            <h5>Descripción</h5>
            <p id="detailsEventDescription">Descripción del evento</p>
          </div>
          <div class="row mb-3">
            <div class="col-md-6">
              <div class="card bg-light">
                <div class="card-body">
                  <h6>Organizador</h6>
                  <p class="mb-0" id="detailsEventOrganizer">Nombre del organizador</p>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card bg-light">
                <div class="card-body">
                  <h6>Capacidad</h6>
                  <p class="mb-0"><span id="detailsEventRegistered">0</span>/<span id="detailsEventCapacity">50</span> participantes</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
          <button type="button" class="btn btn-primary" id="registerEventBtn">Inscribirse</button>
        </div>
      </div>
    </div>
  </div>
  
