<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Configuración - UniEvent</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../css/sisten.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>
  <section class="app-section" id="mainSection">
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-2 col-md-3 px-0">
          <div class="sidebar d-flex flex-column">
            <div class="sidebar-logo">
              <h3 class="text-white mb-0">UniEvent</h3>
            </div>
            <ul class="nav flex-column mt-1">
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-home"></i> Inicio</a></li>
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-calendar-alt"></i> Eventos</a></li>
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-calendar-week"></i> Calendario</a></li>
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-star"></i> Mis eventos</a></li>
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-chart-bar"></i> Estadísticas</a></li>
              <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-user"></i> Mi perfil</a></li>
              <li class="nav-item"><a class="nav-link active" href="#"><i class="fas fa-certificate"></i> Mis certificados</a></li>
              <li class="nav-item"><a class="nav-link active" href="#"><i class="fas fa-cog"></i> Configuración</a></li>
            </ul>
            <div class="sidebar-footer mt-auto">
              <a href="#" class="btn btn-outline-light btn-sm w-100"><i class="fas fa-sign-out-alt"></i> Cerrar sesión</a>
            </div>
          </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-10 col-md-9 p-4">
          <div class="section-content" id="settingsSection">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <h2>Configuración</h2>
              <div>
                <span class="badge bg-primary">Estudiante</span>
                <a href="#" class="ms-2">Gabriel</a>
              </div>
            </div>

            <div class="row">
              <!-- Preferencias -->
              <div class="col-lg-8">
                <!-- Notificaciones -->
                <div class="card mb-4">
                  <div class="card-header bg-white">
                    <h5 class="mb-0">Preferencias de notificaciones</h5>
                  </div>
                  <div class="card-body">
                    <form>
                      <h6>Por correo electrónico</h6>
                      <div class="form-check form-switch mb-2">
                        <input class="form-check-input" type="checkbox" id="emailNewEvents" checked>
                        <label class="form-check-label" for="emailNewEvents">Nuevos eventos relacionados</label>
                      </div>
                      <div class="form-check form-switch mb-2">
                        <input class="form-check-input" type="checkbox" id="emailReminders" checked>
                        <label class="form-check-label" for="emailReminders">Recordatorios de eventos</label>
                      </div>
                      <div class="form-check form-switch mb-2">
                        <input class="form-check-input" type="checkbox" id="emailCancellations" checked>
                        <label class="form-check-label" for="emailCancellations">Cancelaciones o cambios</label>
                      </div>
                      <div class="form-check form-switch mb-4">
                        <input class="form-check-input" type="checkbox" id="emailNewsletters">
                        <label class="form-check-label" for="emailNewsletters">Boletines informativos</label>
                      </div>

                      <h6>Por SMS</h6>
                      <div class="form-check form-switch mb-2">
                        <input class="form-check-input" type="checkbox" id="smsReminders">
                        <label class="form-check-label" for="smsReminders">Recordatorios de eventos</label>
                      </div>
                      <div class="form-check form-switch mb-4">
                        <input class="form-check-input" type="checkbox" id="smsCancellations">
                        <label class="form-check-label" for="smsCancellations">Cancelaciones urgentes</label>
                      </div>

                      <button type="submit" class="btn btn-primary">Guardar preferencias</button>
                    </form>
                  </div>
                </div>

                <!-- Visibilidad -->
                <div class="card mb-4">
                  <div class="card-header bg-white">
                    <h5 class="mb-0">Preferencias de visibilidad</h5>
                  </div>
                  <div class="card-body">
                    <form>
                      <div class="form-check form-switch mb-2">
                        <input class="form-check-input" type="checkbox" id="showProfile" checked>
                        <label class="form-check-label" for="showProfile">Mostrar mi perfil a otros usuarios</label>
                      </div>
                      <div class="form-check form-switch mb-2">
                        <input class="form-check-input" type="checkbox" id="showEvents" checked>
                        <label class="form-check-label" for="showEvents">Mostrar los eventos en los que participo</label>
                      </div>
                           </div> <!-- Fin row -->
    </div> <!-- Fin container-fluid -->
  </section>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
